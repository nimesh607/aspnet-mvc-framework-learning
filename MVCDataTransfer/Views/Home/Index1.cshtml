
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index1</title>
</head>
<body>
    <table border="1" align="center" width="15%">
        <caption>Product Details</caption>
        <tr>
            <td>Id:</td>
            <td>@ViewData["Id"]</td>
        </tr>
        <tr>
            <td>Name:</td>
            <td>@ViewData["Name"]</td>
        </tr>
        <tr>
            <td>Price:</td>
            <td>
                @{
                    double Price = Convert.ToDouble(ViewData["Price"]);
                    Price = Price + (Price * 10 / 100); @Price }
            </td>
        </tr>
    </table>
</body>
</html>
